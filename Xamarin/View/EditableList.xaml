<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="CKAN.Xamarin.View.EditableList">
        <Frame BorderColor="Gray"
                CornerRadius="5"
                HasShadow="False"
                Margin="5, 5, 105, 5"
                Padding="0">
            <ListView Margin="0"
                        HeightRequest="250"
                        SelectionMode="Single">
                <ListView.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>KSP Instance 1</x:String>
                        <x:String>KSP Instance 2</x:String>
                    </x:Array>
                </ListView.ItemsSource>
                <ListView.Header>
                    <Frame BackgroundColor="Gray" CornerRadius="0" Padding="10, 3">
                        <StackLayout Orientation="Horizontal">
                            <Button Text="+" />
                            <Button Text="-" />
                            <Button Text="Edit" />
                            <Button Text="Select" />
                        </StackLayout>
                    </Frame>
                </ListView.Header>
            </ListView>
        </Frame>
</ContentView>
